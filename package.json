{
  "name": "backend",
  "version": "0.0.2",
  "description": "Nest.js is based on Fastify and Mongoose",
  "author": {
    "name": "RV8V",
    "email": "rvolovyk@exadel.com",
    "url": "https://github.com/RV8V"
  },
  "private": true,
  "homepage": "https://github.com/exadel-inc/crisp",
  "repository": {
    "type": "git",
    "url": "https://github.com/exadel-inc/crisp.git"
  },
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && npm run remove-dts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=production node dist/main",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:exm": "cross-env NODE_ENV=example nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "doc": "npm run doc:generate -- -s",
    "doc:generate": "npx @compodoc/compodoc -p tsconfig.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/jest.json --detectOpenHandles --testTimeout 30000",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:build": "rm -rf dist/database/migrations && tsc src/database/migrations/*.ts --outDir dist --experimentalDecorators \"true\"",
    "migrate": "NODE_ENV=development node dist/database/migrate.js",
    "remove-dts": "find dist/database/migrations -name \"*.d.ts\" -delete",
    "migrate-create": "./node_modules/migrate/bin/migrate-create --migrations-dir src/database/migrations/ -t ./src/database/migration.template.ts",
  
    "heroku-prebuild": "docker kill $(docker ps -q) && docker rm $(docker ps -a -q) && docker rmi $(docker images -q) && docker system prune -a && docker volume prune && docker-compose --env-file .env.production up -d",
    "heroku-postbuild": "echo This runs after Heroku installs dependencies, but before Heroku prunes and caches dependencies."
  },
  "dependencies": {
    "@compodoc/compodoc": "^1.1.18",
    "@nestjs/common": "7.4.4",
    "@nestjs/core": "7.4.4",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^9.0.1",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-fastify": "7.4.4",
    "@nestjs/swagger": "^4.6.0",
    "bcryptjs": "^2.4.3",
    "busboy": "^0.3.1",
    "cheerio": "^1.0.0-rc.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "fastify-compress": "^3.3.0",
    "fastify-helmet": "^5.0.3",
    "fastify-multer": "^2.0.2",
    "fastify-multipart": "^3.2.1",
    "fastify-rate-limit": "^4.0.3",
    "fastify-swagger": "^3.3.0",
    "fs-extra": "^10.0.0",
    "migrate": "^1.7.0",
    "mongoose": "^6.1.1",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "^7.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cheerio": "^0.22.23",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.0",
    "@types/node-fetch": "^2.5.8",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.0",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.0",
    "ts-loader": "^8.0.6",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "compodoc": {
    "open": true,
    "hideGenerator": true,
    "output": "./public",
    "tsconfig": "./tsconfig.json",
    "unitTestCoverage": "./coverage/coverage-summary.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint -- --cache",
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
    }
  }
}
